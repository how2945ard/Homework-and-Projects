<style>
  .body{
    margin:0px;
  }

  .hotnews{
    position:absolute;
    left:0px;
    top:50px;
    background: url('/images/Poster_side.jpg') rgba(200,200,200,0.1);
  
    height:600px;
    width:100%;

  }
  .fuckNews{
    position:absolute;
    left:0px;
    top:600px;
    height:100px;
    width:100%;
    background-image: url('/images/fucknews.jpeg');
    color:black;

    
  }

  .reportinput{
    height:50px;
    width:100%;
    border-radius: 20px;
  }
  .fuckNews div{
    height:50px;
    float:left;
    margin-top: 15px;
    line-height: 50px;
    vertical-align: middle;
    font-size: 25px;
  }
  .set{
    margin-left:350px;
  }
  .hotnews .news-item{
    width:100%;
    height:100px;

  }
  .news-item a{
    color: black
  }
</style>
<script type="text/javascript" src="/js/jquery.js"></script>
<link rel="stylesheet" type="text/css" href="/styles/nav.css">

<div ng-app="fucknews" ng-controller="homepage">
   
      <div class="navbar-a">
          <div class="navli logo">
              <a href="http://localhost:1337/">檢爛梅</a>
          </div>
           <div class=" navli logout">
            <form id="logout" method="post" action="/logout">
              <div class="logout-sub">Logout</div>
            </form>
          </div>
          <div class=" navli user">
             <a href="/user/show/<%=user.id %>"><%= user.name %></a>
          </div>
           <div class="navli all"> 
            <a href="/news/showAll">全部爛梅</a>
          </div>
        

      </div>
    


  <div class="hotnews">

    <div ng-repeat="news in newses | limitTo:5 | orderBy: 'hot' ">
      <div class="news-item">
          <a href="/news/show/{{ news.id }}">
            <span style="float:left; font-size:30px; line-height:100px; vertical-align: middle;">{{ news.title }} </span>
            <span style="float:right;font-size:20px; margin-right:30px; line-height:100px; vertical-align: middle;"> {{news.hot}} 個人說這新聞很爛!</span>
            

            
          </a>
      </div>
      
    </div>



   
  </div>
  

  <div class="fuckNews">
    <div class="set">
      <form>
        <div>我要檢舉！</div>
        <div><input ng-model="news.uri" class="input-lg reportinput" type="text" placeholder="在這裡填入網址"></div>
        <div><button class="btn btn-lg btn-info" ng-click="submitNews()">submit</button></div>
      </form>
      </div>
      
    </div>

</div>
<script>

  $('.logout-sub').click(function(){
    $('#logout').submit();
  })
</script>